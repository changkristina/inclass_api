<!DOCTYPE HTML>
<html>
<body>

  <h1>Search Results</h1>

  <form method="GET" action="/search">
    <input type="text" name="q" placeholder="Search">
    <button>Search again!</button>
  </form>

  <h1> Movies: </h1>

  <% movies.forEach(function(movie) { %>
    
    <div>
      <div>
        <h3>Title:</h3>
        <a href="/movie?id=<%= movie.imdbID %>">
          <%= movie.Title %>
        </a>
      </div>
      <div>
          <%= movie.Plot %>
      </div>
    </div>

  <% }); %>

</body>
</html>
